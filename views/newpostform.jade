extends layout

block content
  h1= title
  form#formNewPost(name="newpost",method="post",action="/posts/newpost")
    input#inputName(type="text",placeholder="Name",name="name")
    br
    textarea#inputContent(placeholder="Enter your message",name="content")
    br
    button#btnSubmit(type="submit") submit
    a(href="/posts") cancel
